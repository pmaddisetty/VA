{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.1.json",
  "width": 500,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/pmaddisetty/VA/master/us-10m.json",
    "format": {
      "type": "topojson",
      "feature": "states"
    }
  },
  "transform": [{
     "lookup": "id",
    "from": {
      "data": {
        "url": "https://raw.githubusercontent.com/pmaddisetty/VA/master/losses2015_transformed.csv"
      },
       "key": "State_Code",
      "fields": ["State_Abv","Amount"]
    }
  }],
  "projection": {
    "type": "albersUsa"
  },
  "mark": "geoshape",
  "encoding": {
    "opacity":{
    
      		"field": "State_Abv", "type": "nominal"
        
       }
    }
  }
 
  
